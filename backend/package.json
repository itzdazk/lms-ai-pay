        "dayjs": "^1.11.19",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.0",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "joi": "^18.0.1",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "node-webvtt": "^1.9.4",
        "nodemailer": "^7.0.10",
        "openai": "^6.8.0",
        "qs": "^6.14.0",
        "sharp": "^0.34.4",
        "srt-parser-2": "^1.2.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
