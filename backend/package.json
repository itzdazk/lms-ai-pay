        "jest": "^30.2.0",
        "newman": "^6.2.1",
        "newman-reporter-htmlextra": "^1.23.1",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "prisma": "^6.18.0",
        "supertest": "^7.1.4"
    }
